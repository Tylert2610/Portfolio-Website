# Database
DATABASE_URL=postgresql://username:password@localhost/portfolio_blog

# Security
SECRET_KEY=your-super-secret-key-here-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Email Configuration (choose one method)
# Option 1: SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Option 2: AWS SES
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# Email sender
EMAIL_FROM=noreply@portfolio.webbpulse.com

# Application
APP_NAME=Portfolio Blog API
DEBUG=false
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173","https://portfolio.webbpulse.com"] 